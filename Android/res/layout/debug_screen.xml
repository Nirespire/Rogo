<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DebugActivity" >

    <Button
        android:id="@+id/location_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_debug_button"
        android:layout_below="@+id/meeting_someone_debug_button"
        android:onClick="getLocation"
        android:text="Get Location" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="WELCOME TO DEBUG" />

    <Button
        android:id="@+id/meeting_someone_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_debug_button"
        android:onClick="openMeetingSomeoneScreen"
        android:text="Meet Screen" />

    <Button
        android:id="@+id/send_request_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location_debug_button"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/meeting_someone_debug_button"
        android:layout_toRightOf="@+id/meeting_someone_debug_button"
        android:onClick="openSendRequestScreen"
        android:text="Send Request" />

    <Button
        android:id="@+id/check_requests_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_debug_button"
        android:layout_centerHorizontal="true"
        android:text="Check for Requests" 
        android:onClick="checkRequests"/>
    
     <Button
        android:id="@+id/recently_met"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_requests_button"
        android:layout_centerHorizontal="true"
        android:onClick="openRecentlyMetScreen"
        android:text="Recently Met List" />

     <Button
         android:id="@+id/button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/recently_met"
         android:layout_centerHorizontal="true"
         android:text="User(local)" 
         android:onClick="openUserScreen"/>

     <Button
         android:id="@+id/registration_debug_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:onClick="openRegistrationScreen"
         android:text="Registration Screen" />

     <Button
         android:id="@+id/login_debug_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/registration_debug_button"
         android:layout_centerHorizontal="true"
         android:onClick="openLoginScreen"
         android:text="Login Screen" />

</RelativeLayout>