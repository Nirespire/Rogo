<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DebugActivity" >

    <Button
        android:id="@+id/server_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/meeting_someone_debug_button"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="SERVER REQUEST" />

    <Button
        android:id="@+id/location_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_debug_button"
        android:layout_below="@+id/meeting_someone_debug_button"
        android:onClick="getLocation"
        android:text="Get Location" />

    <Button
        android:id="@+id/meeting_someone_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_debug_button"
        android:layout_centerHorizontal="true"
        android:onClick="openMeetingSomeoneScreen"
        android:text="Meeting Someone" />

    <Button
        android:id="@+id/login_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration_debug_button"
        android:layout_centerHorizontal="true"
        android:onClick="openLoginScreen"
        android:text="Login Screen" />

    <Button
        android:id="@+id/registration_debug_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_debug_button"
        android:layout_centerHorizontal="true"
        android:onClick="openRegistrationScreen"
        android:text="REGISTRATION SCREEN" />

    <Button
        android:id="@+id/cache_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_debug_button"
        android:layout_centerHorizontal="true"
        android:onClick="onCacheRead"
        android:text="Cache Test" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="WELCOME TO DEBUG" />

</RelativeLayout>